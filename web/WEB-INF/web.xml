<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <filter>
        <filter-name>AutoLoginFilter</filter-name>
        <filter-class>filter.AutoLogin</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AutoLoginFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>permissionCheckFilter</filter-name>
        <filter-class>filter.Permission</filter-class>
        <init-param>
            <param-name>notCheckUri</param-name>
            <param-value>/CreateVerifyCodeImage.do,/Login.do,/Logout.do,/error.jsp</param-value>
        </init-param>

    </filter>
    <filter-mapping>
        <filter-name>permissionCheckFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>
</web-app>